@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1>Stylists</h1>

<ul>
@if (Model.Count == 0)
{
  <p>There are no stylists!</p>
}
@if(Model.Count != 0)
{
  @foreach (Stylist stylist in Model)
  {
    <li><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></li>
  }
}
</ul>

<a href="/stylists/new">Add Stylist.</a>
<form action="/stylists/destroy" method="post">
  <button type="submit" class="btn btn-danger">Delete All Stylists</button>
</form>
