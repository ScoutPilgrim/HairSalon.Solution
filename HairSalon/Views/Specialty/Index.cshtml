@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1>Specialties</h1>

<ul>
@if (Model.Count == 0)
{
  <p>There are no specialties!</p>
}
@if(Model.Count != 0)
{
  @foreach (Specialty specialty in Model)
  {
    <li><a href='/specialties/@specialty.GetId()'>@specialty.GetSpec()</a></li>
  }
}
</ul>

<a href="/specialties/new">Add Specialty.</a>
<form action="/specialties/destroy" method="post">
  <button type="submit" class="btn btn-danger">Delete All specialties</button>
</form>
